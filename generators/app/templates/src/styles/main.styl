html
  height 100%

body
  margin 0
  background #4259f4 /* For browsers that do not support gradients */
  font-family 'Work Sans', sans-serif
  // All here for a good reason -- Make the background look accaeptable
  box-sizing border-box
  height 100%
  border-top 22px solid white
  border-bottom 22px solid white
  color white
  background linear-gradient(to bottom right, #55e89c, #4259f4)


.container
  text-align center
  padding-top 15%
  max-width 600px
  margin 0 auto

img
  max-width 200px
  border 2px solid white
  border-radius 150px

h1
  font-size 4em
  margin 1%

a
  padding 10px
  text-decoration none
  color white

a:hover
  color black
